
<h3>Edit Your Listing</h3>
<form method="post" action="/listings/<%= listing.id %>?_method=PUT">
  <div class="mb-4">
    <label for="title" class="form-label">Title</label>
    <input
      name="listing[title]"
      value="<%= listing.title %>"
      type="text"
      class="form-control"
    />
  </div>
  <div class="mb-4">
    <label for="title" class="form-label">Title</label>
    <textarea name="listing[description]" type="text" rows="5" cols="20">
<%= listing.description %></textarea
    >
  </div>
  <div class="mb-4">
    <label for="title" class="form-label">Title</label>
    <input name="listing[image]" value="<%= listing.image %>" type="text" />
  </div>
  <div class="mb-4">
    <label for="title" class="form-label">Title</label>
    <input name="listing[price]" value="<%= listing.price %>" type="number" />
  </div>
  <div class="mb-4">
    <label for="title" class="form-label">Title</label>
    <input
      name="listing[location]"
      value="<%= listing.location %>"
      type="text"
    />
  </div>
  <div class="mb-4">
    <label for="title" class="form-label">Title</label>
    <input name="listing[country]" value="<%= listing.country %>" type="text" />
  </div>
  <button>Edit</button>
</form>
