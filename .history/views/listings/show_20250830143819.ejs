<% layout("/layouts/boilerplate") %>
<h3>Listing Details :</h3>
<div class="card">
  <img class="" src="<%= listing.image %>" class="card-img-top" alt="listing_image" />
  <div class="card-body">
    <p class="card-text"><%= listing.title %></p>
  </div>
</div>
<ul>
  <li><%= listing.title %></li>
  <li><%= listing.description %></li>
  <li>&#8377;<%= listing.price ? listing.price.toLocaleString("en-IN") : 'Price not available' %></li>
  <li><%= listing.location %></li>
  <li><%= listing.country %></li>
  <br /><br />
  <a href="/listings/<%= listing.id %>/edit">Edit This Listing</a>
  <br /><br />
  <form method="post" action="/listings/<%= listing.id %>?_method=DELETE">
    <button>Delete This listing</button>
  </form>
</ul>
