<h3>Edit Your Listing</h3>
<form method="post" action="/listings/<%= listing.id %>?_method=PUT">

  <div class="mb-4">
        <label for="title" class="form-label">Title</label>
          <input name="listing[title]" value="<%= listing.title %>" type="text" class="for"/>

      </div>
  <br />
  <br />
  <textarea name="listing[description]" type="text" rows="5" cols="20">
<%= listing.description %></textarea
  >
  <br />
  <br />
  <input name="listing[image]" value="<%= listing.image %>" type="text" />
  <br />
  <br />
  <input name="listing[price]" value="<%= listing.price %>" type="number" />
  <br />
  <br />
  <input name="listing[location]" value="<%= listing.location %>" type="text" />
  <br />
  <br />
  <input name="listing[country]" value="<%= listing.country %>" type="text" />
  <br />
  <br />
  <button>Edit</button>
</form>
